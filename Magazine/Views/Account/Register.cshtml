
@{
    Layout = null;
}
@model Magazine.Models.AccountRegisterViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Wizard</title>
    <link href="@Url.Content("~/Assets/client/css/login-style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js")" data-deferred="1"></script>
    <link rel="stylesheet" href="@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("https://pro.fontawesome.com/releases/v5.10.0/css/all.css")" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="preconnect" href="@Url.Content("https://fonts.googleapis.com")">
    <link rel="preconnect" href="@Url.Content("https://fonts.gstatic.com")" crossorigin>
    <link href="@Url.Content("https://fonts.googleapis.com/css2?family=Spartan:wght@300;400;500;600&display=swap")" "stylesheet">
    <link href="@Url.Content("https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap")" rel="stylesheet">
</head>
<body>
    <div id="particles-js">
        <div class="animated bounceInDown">
            <div class="container-register">
                <span class="error animated tada" id="msg"></span>
                @using (Html.BeginForm(null, null, new { },
                       FormMethod.Post, new { @class = "box", name = "form1", onsubmit = "return checkStuff()" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="logo">
                        <i class="fas fa-hat-wizard"></i>
                        <span>Wizard Magazine</span>
                    </div>
                    <h5>Register to your account.</h5>

                    @Html.LabelFor(model => model.UserName)
                    @Html.TextBoxFor(model => model.UserName, new { @type = "text", @placeholer = "Username", @autocomplete = "off", @autofocus = "autofocus" })
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { @type = "text", @placeholer = "Email", @autocomplete = "off", @autofocus = "autofocus" })
                    @Html.LabelFor(model => model.FullName)
                    @Html.TextBoxFor(model => model.FullName, new { @type = "text", @placeholer = "FullName", @autocomplete = "off", @autofocus = "autofocus" })
                    @Html.LabelFor(model => model.Password)
                    <i class="typcn typcn-eye" id="eye"></i>
                    @Html.TextBoxFor(model => model.Password, new { @id = "pwd", @type = "password", @placeholer = "Password", @autocomplete = "off" })
                    <input type="submit" value="Register" class="btn1">
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                }
                <a href="@Url.Action("Login","Account")" class="dnthave">Đã có tài khoản ? Đăng nhập !</a>
            </div>
        </div>
    </div>
    <script>
        // ParticlesJS Config.
        particlesJS("particles-js", {
            "particles": {
                "number": {
                    "value": 60,
                    "density": {
                        "enable": true,
                        "value_area": 800
                    }
                },
                "color": {
                    "value": "#ffffff"
                },
                "shape": {
                    "type": "circle",
                    "stroke": {
                        "width": 0,
                        "color": "#000000"
                    },
                    "polygon": {
                        "nb_sides": 5
                    },
                    "image": {
                        "src": "img/github.svg",
                        "width": 100,
                        "height": 100
                    }
                },
                "opacity": {
                    "value": 0.1,
                    "random": false,
                    "anim": {
                        "enable": false,
                        "speed": 1,
                        "opacity_min": 0.1,
                        "sync": false
                    }
                },
                "size": {
                    "value": 6,
                    "random": false,
                    "anim": {
                        "enable": false,
                        "speed": 40,
                        "size_min": 0.1,
                        "sync": false
                    }
                },
                "line_linked": {
                    "enable": true,
                    "distance": 150,
                    "color": "#ffffff",
                    "opacity": 0.1,
                    "width": 2
                },
                "move": {
                    "enable": true,
                    "speed": 1.5,
                    "direction": "top",
                    "random": false,
                    "straight": false,
                    "out_mode": "out",
                    "bounce": false,
                    "attract": {
                        "enable": false,
                        "rotateX": 600,
                        "rotateY": 1200
                    }
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": {
                        "enable": false,
                        "mode": "repulse"
                    },
                    "onclick": {
                        "enable": false,
                        "mode": "push"
                    },
                    "resize": true
                },
                "modes": {
                    "grab": {
                        "distance": 400,
                        "line_linked": {
                            "opacity": 1
                        }
                    },
                    "bubble": {
                        "distance": 400,
                        "size": 40,
                        "duration": 2,
                        "opacity": 8,
                        "speed": 3
                    },
                    "repulse": {
                        "distance": 200,
                        "duration": 0.4
                    },
                    "push": {
                        "particles_nb": 4
                    },
                    "remove": {
                        "particles_nb": 2
                    }
                }
            },
            "retina_detect": true
        });
    </script>
</body>
</html>
